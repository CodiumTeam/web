<div class="carousel">
  <div class="glide" id="opinion">

    <div class="glide__arrows">
      <p
        class="glide__arrow glide__arrow--left js-opinion-arrow"
        data-glide-dir="<"
      >
        <i class="icon icon-circle-left"></i>
      </p>
    </div>

    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <% opinions.forEach(function(opinion){ %>
          <li class="glide__slide">
            <%- include('../../partials/cards/card-opinion', {...opinion })  %>
            </li>
        <% }); %>
      </ul>
    </div>

    <div class="glide__arrows">
      <p
        class="glide__arrow glide__arrow--right js-opinion-arrow"
        data-glide-dir=">"
      >
        <i class="icon icon-circle-right"></i>
      </p>
    </div>

    <div class="glide__bullets" data-glide-el="controls[nav]">
      <% opinions.forEach(function(opinion, index){ %>
        <span class="glide__bullet" data-glide-dir="=<%= index %>"></span>
      <% }); %>
    </div>
  </div>
</div>
