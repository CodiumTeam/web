<article class="card card--large">
  <div class="card__header">
    <img
      width="200"
      height="<%= locals.height || 180 %>"
      loading="lazy"
      src="<%= imageUrl %>"
      alt="<%= title %> illustration"
      class="card__image"
    />
  </div>
  <p class="card__title"><%= title %></p>
  <div class="card__footer">
    <ul class="card__list">
      <% list.forEach(function(item){ %>
      <li><%= item %></li>
      <% }); %>
    </ul>
    <div class="card__footer-btn">
      <a href="<%= buttonUrl %>" class="button button--outline">
        <t>Más información</t>
      </a>
    </div>
  </div>
</article>
