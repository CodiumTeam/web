<i class="icon icon-menu header__icon" id="js-menu-button"></i>
<nav class="navbar" id="js-menu">
    <ul class="navbar__list">
        <% menu.forEach(function(item){ %>
            <li class="navbar__item <%= item.children ? 'dropdown' : '' %> ">
                <% if (item.url) { %>
                    <a href="<%= item.url %>"><%= item.title %></a>
                <% } else { %>
                    <span><%= item.title %></span>
                <% } %>

                <% if (item.children) { %>
                    <ul class="options">
                        <% item.children.forEach(function(item){ %>
                            <li>
                                <a href="<%= item.url %>" <%= item.newTab ? 'target=_blank' : '' %>><%- item.title %></a>
                            </li>
                        <% }); %>
                    </ul>
                <% } %>

            </li>
        <% }); %>

        <li class="navbar__item dropdown lang-switcher">
            <span class="lang-option">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"/>
                </svg>
                <% if (locale === 'es') { %>
                    <span>Español</span>
                <% } else if (locale === 'en') { %>
                    <span>English</span>
                <% } %>
            </span>
            <ul class="options">
                <li>
                    <a class="lang-option" data-locale="en">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             width="10"
                             stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"/>
                        </svg>
                        <span>English</span>
                    </a>
                </li>
                <li>
                    <a class="lang-option" data-locale="es">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             width="10"
                             stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802"/>
                        </svg>
                        <span>Español</span>
                    </a>
                </li>
            </ul>
        </li>

    </ul>
</nav>
